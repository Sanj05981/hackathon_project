{
  "manifest_version": 3,
  "name": "PanoptoPal",
  "version": "1.1",
  "description": "AI assistant for UVA Panopto videos that helps understand and analyze lecture content",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://uva.hosted.panopto.com/*",
    "https://api.groq.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "panopto_logo.png",
      "48": "panopto_logo.png",
      "128": "panopto_logo.png"
    }
  },
  "icons": {
    "16": "panopto_logo.png",
    "48": "panopto_logo.png",
    "128": "panopto_logo.png"
  }
}